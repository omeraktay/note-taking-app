<%- include('../partials/layout', { title: 'Login', body: `
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <!-- Login Header -->
            <h1 class="text-center mb-4">Please Login</h1>

            <!-- Error Message Display -->
            <div id="error-message" class="alert alert-danger d-none" role="alert"></div>

            <!-- Login Form -->
            <form style="background-color: burlywood;" action="/login" method="post" class="p-4 border rounded shadow-sm">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input style="background-color: bisque;"  type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input style="background-color: bisque;"  type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
` }) %>



